@page "/signuppage"

<link rel="stylesheet" href="../bootstrap-5.2.0-dist/css/bootstrap.css" />
<link rel="stylesheet" href="Fa_icons/css/all.css"/>
<!-- <PageTitle> Profile Page </PageTitle> -->

<div class="container">
    <div class="row">
        <div class="col" >
            <button class="btn btn-primary" style="width:40%;height:30%"> <i class="fa fa-angle-left"><NavLink class="nav-link text-light" href="loginpage">
                </NavLink></i></button>
        </div>
        <div class="col">
            <h1><b><i><u> Signup </u></i></b></h1>
        </div>
        <div class="col">

        </div>
    </div>
    
    <form class="mt-5">
        <div class="row m-5">
            <div class="form-floating mb-3">
            <input type="text" name="name1" id="name1" class="form-control">
            <label for="name1"> Enter Name </label>
            </div>
            <div class="form-floating mb-3">
            <input type="email" name="email" id="email" class="form-control">
            <label for="email"> Enter Email </label>
            </div>
            <div class="form-floating mb-3">
            <input type="password" name="password" id="password" class="form-control">
            <label for="password"> Enter Password </label>
            </div>
            <div class="form-floating mb-3">
            <input type="password" name="password" id="password" class="form-control">
            <label for="password"> Confirm Password </label>
            </div>
            <div class="col-sm mb-3" style="border:1px solid #FFFFFF; display:flex; justify-content:center">
                <button class="btn btn-success" @onclick="signup_success">
                    Create Account
                </button>
            </div>
        </div>
    </form>
</div>

@code{
    private void signup_success(){
        Console.WriteLine("Signup is successful");
    }
}