@page "/signuppage"

<link rel="stylesheet" href="../bootstrap-5.2.0-dist/css/bootstrap.css" />
<link rel="stylesheet" href="Fa_icons/css/all.css"/>
<!-- <PageTitle> Profile Page </PageTitle> -->

<div class="container">
    <div class="row">
        <div class="col"  >
            <div class="col" style="border: 0px solid #000000; flex:display; justify-content:left">
            <NavLink class="nav-link text-light" href="loginpage">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="black" class="bi bi-arrow-left" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
                </svg>
            </NavLink>
            </div>
        </div>
        <div class="col">
            <h1><b><i><u> Signup </u></i></b></h1>
        </div>
        <div class="col">

        </div>
    </div>
    
    <form class="mt-5">
        <div class="row m-5">
            <div class="form-floating mb-3">
            <input type="text" name="name1" id="name1" class="form-control">
            <label for="name1"> Enter Name </label>
            </div>
            <div class="form-floating mb-3">
            <input type="email" name="email" id="email" class="form-control">
            <label for="email"> Enter Email </label>
            </div>
            <div class="form-floating mb-3">
            <input type="password" name="password" id="password" class="form-control">
            <label for="password"> Enter Password </label>
            </div>
            <div class="form-floating mb-3">
            <input type="password" name="password" id="password" class="form-control">
            <label for="password"> Confirm Password </label>
            </div>
            <div class="col-sm mb-3" style="border:1px solid #FFFFFF; display:flex; justify-content:center">
                <button class="btn btn-success" @onclick="signup_success">
                    Create Account
                </button>
            </div>
        </div>
    </form>
</div>

@code{
    private void signup_success(){
        Console.WriteLine("Signup is successful");
    }
}
