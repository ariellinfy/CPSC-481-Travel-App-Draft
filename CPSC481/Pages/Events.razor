body {
}

#searchButton {
    margin: 0;
}

#popular {
    display: flex;
    overflow: scroll;
    gap: 1rem;
    margin-bottom: 30px;
}

.card {
    min-width: 220px;
    border-radius: 10%;
    border-color: rgba(111,111,111,0.2) transparent transparent;
}

.card-img-top {
    border-radius: 5%;
    width: 218px;
    height: 146px;
    box-shadow: 5px 5px 5px #ccc;
}

.card2 {
    min-width: 10rem!important;
    margin-right: 1.5rem!important;
}

.card-img-top2 {
    border-radius: 50%;
    width: 10rem;
    height: 10rem;
    box-shadow: 5px 5px 5px #ccc;
}

.card-text2 {
    text-align: center!important;
    margin-top: 10px!important;
    font-size: 20px!important;
}

#popular::-webkit-scrollbar {
    display: none;
}

#categories {
    display: flex;
    overflow: scroll;
    gap: 1rem;
    margin-bottom: 50px;
}

    #categories::-webkit-scrollbar {
        display: none;
    }

h4 {
    margin-top: 10px;
}

p {
    margin-bottom: 0rem;
}

#categories > .card > img {
    border-radius: 30%;
}
