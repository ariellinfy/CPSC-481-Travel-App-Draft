@page "/loginpage"
<link rel="stylesheet" href="../bootstrap-5.2.0-dist/css/bootstrap.css" />
<link rel="stylesheet" href="Fa_icons/css/all.css"/>
<!-- <PageTitle> Profile Page </PageTitle> -->

<head>
    <title> Login </title>
</head>


<div class="container">
    <div class="alert alert-success" role="alert">
        <h4 class="alert-heading">Logout Successful!</h4>
        <p>You have logged out of your account successfully. See the login page below to continue. </p>
    </div>
    <div class="row">
        <div class="col">
            <h1> Login </h1>
        </div>
        <hr>
    </div>
    
    <form class="mt-3">
        <div class="row">
            <div class="form-floating mb-3">
                <input type="email" name="email" id="email" class="form-control">
                <label for="email"> Enter Email </label>
            </div>
            <div class="form-floating mb-3">
                <input type="password" name="password" id="password" class="form-control">
                <label for="password"> Enter Password </label>
            </div>
            <div class="col-sm mb-3" style="border:1px solid #FFFFFF; display:flex; justify-content:center">
                <button class="btn btn-outline-success" id="loginsuccess">
                    Login
                </button>
            </div>
            <div class="col-sm mb-3" style="text-align:center">
                <p> <a href="forget"> Forgot Password? </a></p>
            </div>
            <hr>
            <div class="col-sm" style="text-align:center">
                <p> Do not have an account with us? <b>Click the Signup button below!</b> </p>
            </div>    
            <div class="col-sm mb-3" style="border:1px solid #FFFFFF; display:flex; justify-content:center">
                <button class="btn btn-outline-success">
                    <NavLink class="nav-link text-success" href="signuppage">Signup</NavLink>
                </button>
            </div>
            <hr>
            <div class="col-sm mb-3 bg-outline-success" style="text-color:black; text-align:center;">
                <p style="text-align:center">Click below to continue as our guest</p>
                <a href="profilepage" style="color:green; text-decoration:none; font-size:20px"> Continue as guest</a>
            </div>
        </div>
    </form>
    <br>
</div>   

