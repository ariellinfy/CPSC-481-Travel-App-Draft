        <div class="col" style="border:1px solid #FFFFFF; display:flex; justify-content:center">
            <h1><b><i><u> Login </u></i></b></h1>
        </div>
        <div class="col">

        </div>
    </div>
    
    <form class="mt-5">
        <div class="row m-2">
            <div class="form-floating mb-3">
                <input type="email" name="email" id="email" class="form-control">
                <label for="email"> Enter Email </label>
            </div>
            <div class="form-floating mb-3">
                <input type="password" name="password" id="password" class="form-control">
                <label for="password"> Enter Password </label>
            </div>
            <div class="col-sm mb-3" style="border:1px solid #FFFFFF; display:flex; justify-content:center">
                <button class="btn btn-outline-success" id="loginsuccess">
                    Login
                </button>
            </div>
            <div class="col-sm mb-3" style="text-align:center">
                <p> <a href="forget"> Forgot Password? </a></p><hr>
            </div>
            <div class="col-sm mb-3" style="text-align:center">
                <p> Do not have an account with us? <b>Click the Signup button below!</b> </p>
                <br>
            </div>    
            <div class="col-sm mb-3" style="border:1px solid #FFFFFF; display:flex; justify-content:center">
                <button class="btn btn-outline-success">
                    <NavLink class="nav-link text-success" href="signuppage">Signup</NavLink>
                </button>
            </div>
        </div>
    </form>
    <br>
</div>   

